<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_new"
    tools:context="com.example.digitracksdk.presentation.my_letters.MyLettersActivity">
    <include
        layout="@layout/toolbar_main"
        android:id="@+id/toolbar"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgBottomBg"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/my_letters_bg"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMyLetters"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_my_letters"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <include
        layout="@layout/content_loading"
        android:id="@+id/layout_loading"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>