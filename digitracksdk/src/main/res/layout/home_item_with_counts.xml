<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgMenuIcon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="18dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_onboarding" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/plus_jakarta_display_regular"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintBottom_toBottomOf="@id/imgMenuIcon"
        app:layout_constraintEnd_toStartOf="@+id/tvCount"
        app:layout_constraintStart_toEndOf="@id/imgMenuIcon"
        app:layout_constraintTop_toTopOf="@id/imgMenuIcon"
        tools:text="Leaves" />
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:shapeAppearance="@style/circleImageView"
        app:layout_constraintTop_toTopOf="@id/tvCount"
        app:layout_constraintBottom_toBottomOf="@id/tvCount"
        app:layout_constraintStart_toStartOf="@id/tvCount"
        app:layout_constraintEnd_toEndOf="@id/tvCount"
        app:srcCompat="@color/neon_carrot"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/plus_jakarta_display_regular_small"
        app:layout_constraintBottom_toBottomOf="@id/imgMenuIcon"
        app:layout_constraintCircleRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgMenuIcon"
        tools:text="06"
        android:padding="5dp"
        android:textColor="@color/white"/>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/athens_gray"
        android:alpha="0.8"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/imgMenuIcon"/>



</androidx.constraintlayout.widget.ConstraintLayout>