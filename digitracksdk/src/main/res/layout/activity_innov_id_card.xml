<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.digitracksdk.presentation.home.innov_id_card.InnovIdCardActivity">

    <include
        layout="@layout/toolbar_main"
        android:id="@+id/toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@drawable/main_bg"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgInnovLogo"
                android:layout_width="188dp"
                android:layout_height="102dp"
                android:layout_marginTop="33dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/innov_logo" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgBg"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@id/imgCustomerProfile"
                app:srcCompat="@drawable/bg_innvo_card" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgCustomerProfile"
                android:layout_width="174dp"
                android:layout_height="174dp"
                android:layout_marginTop="30dp"
                android:scaleType="centerCrop"
                app:strokeWidth="5dp"
                android:padding="5dp"
                app:strokeColor="@color/white"
                app:shapeAppearance="@style/circleImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgInnovLogo"
                app:srcCompat="@drawable/profile_placeholder" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgQrCode"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_margin="@dimen/dimen8"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_qrcode"
                app:layout_constraintEnd_toEndOf="@id/imgCustomerProfile"
                app:layout_constraintStart_toStartOf="@id/imgCustomerProfile"
                app:layout_constraintTop_toBottomOf="@id/imgCustomerProfile"

                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                style="@style/plus_jakarta_display_medium_xx_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="Abhilash Jhariya"
                android:gravity="center"
                android:ellipsize="end"
                android:layout_marginHorizontal="24dp"
                android:textColor="@color/cod_gray"
                app:layout_constraintEnd_toEndOf="@id/imgCustomerProfile"
                app:layout_constraintStart_toStartOf="@id/imgCustomerProfile"
                app:layout_constraintTop_toBottomOf="@id/imgQrCode" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDesignation"
                style="@style/plus_jakarta_display_regular_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="Assistant Manager"
                android:textColor="@color/gray"
                app:layout_constraintEnd_toEndOf="@id/tvName"
                app:layout_constraintStart_toStartOf="@id/tvName"
                app:layout_constraintTop_toBottomOf="@id/tvName" />

            <View
                android:id="@+id/divider45"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.45"
                app:layout_constraintStart_toStartOf="parent" />
            <View
                android:id="@+id/divider10"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.10"
                app:layout_constraintStart_toStartOf="parent" />
            <View
                android:id="@+id/divider90"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.90"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBloodGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/plus_jakarta_display_medium_x_small"
                android:textColor="@color/tundora"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvDesignation"
                app:layout_constraintStart_toEndOf="@id/divider10"
                app:layout_constraintEnd_toEndOf="@id/divider45"
                android:text="@string/blood_group"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBloodGroupValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/plus_jakarta_display_regular_x_small"
                android:textColor="@color/tundora"
                app:layout_constraintTop_toTopOf="@id/tvBloodGroup"
                app:layout_constraintStart_toEndOf="@id/divider45"
                app:layout_constraintEnd_toEndOf="@id/divider90"
                tools:text=" : B+"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDoj"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/plus_jakarta_display_medium_x_small"
                android:textColor="@color/tundora"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvBloodGroup"
                app:layout_constraintStart_toEndOf="@id/divider10"
                app:layout_constraintEnd_toEndOf="@id/divider45"
                android:text="@string/date_of_joining"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDojValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/plus_jakarta_display_regular_x_small"
                android:textColor="@color/tundora"
                app:layout_constraintTop_toTopOf="@id/tvDoj"
                app:layout_constraintStart_toEndOf="@id/divider45"
                app:layout_constraintEnd_toEndOf="@id/divider90"
                tools:text=" : B+"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/plus_jakarta_display_medium_x_small"
                android:textColor="@color/tundora"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvDoj"
                app:layout_constraintStart_toEndOf="@id/divider10"
                app:layout_constraintEnd_toEndOf="@id/divider45"
                android:text="@string/work_location"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLocationValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/plus_jakarta_display_regular_x_small"
                android:textColor="@color/tundora"
                app:layout_constraintTop_toTopOf="@id/tvLocation"
                app:layout_constraintStart_toEndOf="@id/divider45"
                app:layout_constraintEnd_toEndOf="@id/divider90"
                tools:text=" : B+"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvClientName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/plus_jakarta_display_medium_x_small"
                android:textColor="@color/tundora"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvLocation"
                app:layout_constraintStart_toEndOf="@id/divider10"
                app:layout_constraintEnd_toEndOf="@id/divider45"
                android:text="@string/client_name"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvClientNameValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/plus_jakarta_display_regular_x_small"
                android:textColor="@color/tundora"
                app:layout_constraintTop_toTopOf="@id/tvClientName"
                app:layout_constraintStart_toEndOf="@id/divider45"
                app:layout_constraintEnd_toEndOf="@id/divider90"
                tools:text=" : B+"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEmergencyContact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/plus_jakarta_display_medium_x_small"
                android:textColor="@color/tundora"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvClientNameValue"
                app:layout_constraintStart_toEndOf="@id/divider10"
                app:layout_constraintEnd_toEndOf="@id/divider45"
                android:text="@string/emergency_contact"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEmergencyContactValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/plus_jakarta_display_regular_x_small"
                android:textColor="@color/tundora"
                app:layout_constraintTop_toTopOf="@id/tvEmergencyContact"
                app:layout_constraintStart_toEndOf="@id/divider45"
                app:layout_constraintEnd_toEndOf="@id/divider90"
                tools:text=" : B+"/>

            <include
                android:id="@+id/content_loading"
                layout="@layout/content_loading"
                android:visibility="gone"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>