<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/label_color">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_label"
        style="@style/plus_jakarta_display_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen16"
        android:background="@color/label_color"
        android:paddingVertical="@dimen/dimen10"
        android:textColor="@color/cod_gray"
        android:textSize="@dimen/size14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Attendance is Applied." />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_date"
        style="@style/plus_jakarta_display_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen16"
        android:layout_marginEnd="@dimen/dimen16"
        android:background="@color/label_color"
        android:paddingVertical="@dimen/dimen10"
        android:textColor="@color/jungle_green"
        android:textSize="@dimen/size14"
        app:layout_constraintBottom_toBottomOf="@+id/text_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/text_label"
        app:layout_constraintTop_toTopOf="@+id/text_label"
        tools:text="18/12/2012" />
</androidx.constraintlayout.widget.ConstraintLayout>