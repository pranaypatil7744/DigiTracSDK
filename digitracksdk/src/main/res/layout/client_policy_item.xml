<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="18dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="15dp"
    android:paddingHorizontal="5dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgPolicy"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:shapeAppearance="@style/circleImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_dummy_policy"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPolicyType"
        style="@style/plus_jakarta_display_medium_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/mine_shaft"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgPolicy"
        tools:text="HR rules"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPolicyName"
        style="@style/plus_jakarta_display_regular_x_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/mine_shaft"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvPolicyType"
        app:layout_constraintTop_toBottomOf="@id/tvPolicyType"
        tools:text="HR rules"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPolicyDate"
        style="@style/plus_jakarta_display_regular_x_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/silver_chalice"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAcknowledge"
        app:layout_constraintStart_toStartOf="@id/tvPolicyType"
        app:layout_constraintTop_toBottomOf="@id/tvPolicyName"
        tools:text="Acknowledged on- 21 mar 2024"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnView"
        style="@style/MaterialButtonBaseStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        app:cornerRadius="15dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/blue_ribbon"
        app:strokeColor="@color/blue_ribbon"
        app:strokeWidth="0.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPolicyDate"
        app:layout_constraintEnd_toStartOf="@id/btnAcknowledge"
        android:text="@string/view" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAcknowledge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MaterialButtonBaseStyle"
        android:textAllCaps="false"
        android:visibility="visible"
        app:cornerRadius="15dp"
        android:text="@string/view_acknowledged"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvPolicyDate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>