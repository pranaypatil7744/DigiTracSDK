<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.digitracksdk.presentation.attendance.mileage_tracking.MileageTrackingActivity">

    <include
        layout="@layout/toolbar_main"
        android:id="@+id/toolbar"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        app:tabSelectedTextColor="@color/blue_ribbon"
        app:tabTextColor="@color/mine_shaft"
        app:tabIndicatorColor="@color/blue_ribbon"
        app:tabIndicatorFullWidth="true"
        app:tabTextAppearance="@style/TabLayout"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

    </com.google.android.material.tabs.TabLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/alto"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerMileageTracking"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>