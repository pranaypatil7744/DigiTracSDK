<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.digitracksdk.presentation.home.geo_tracking.tracking_details.GeoTrackingDetailsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/layoutBottom"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        >

       <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="parent" />

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDay"
            style="@style/plus_jakarta_display_regular_x_large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            tools:text="Friday"
            android:visibility="invisible"
            android:textColor="@color/cod_gray"
            app:layout_constraintEnd_toStartOf="@+id/btnAttendance"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLat"
            style="@style/plus_jakarta_display_regular_x_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="@string/lat"
            android:textColor="@color/cod_gray"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/btnAttendance"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLatValue"
            style="@style/plus_jakarta_display_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:visibility="invisible"
            android:layout_marginHorizontal="5dp"
            app:layout_constraintBottom_toBottomOf="@id/tvLat"
            app:layout_constraintEnd_toStartOf="@id/btnStartTracking"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/tvLat"
            app:layout_constraintTop_toTopOf="@id/tvLat"
            tools:text="25 June 2021" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLong"
            style="@style/plus_jakarta_display_regular_x_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="@string/long_"
            android:visibility="invisible"
            android:textColor="@color/cod_gray"
            app:layout_constraintEnd_toStartOf="@+id/btnAttendance"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@id/tvLat"
            app:layout_constraintStart_toStartOf="@id/tvLat"
            app:layout_constraintEnd_toEndOf="@id/tvLat" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLongValue"
            style="@style/plus_jakarta_display_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:visibility="invisible"
            android:layout_marginHorizontal="5dp"
            app:layout_constraintBottom_toBottomOf="@id/tvLong"
            app:layout_constraintEnd_toStartOf="@id/btnStartTracking"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/tvLong"
            app:layout_constraintTop_toTopOf="@id/tvLong"
            tools:text="25 June 2021" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            style="@style/plus_jakarta_display_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:text="25 June 2021"
            android:visibility="invisible"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDay" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btnAttendance"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_attendance_finger" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnStartTracking"
            android:layout_width="60dp"
            android:layout_height="60dp"
            style="@style/plus_jakarta_display_medium"
            android:background="@drawable/bg_log_visit"
            android:text="@string/geo_tracking_start"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnStopTracking"
            style="@style/plus_jakarta_display_medium"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_log_visit"
            android:gravity="center"
            android:text="@string/geo_tracking_stop"
            android:textColor="@color/white"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/btnAttendance"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/tvLat"
            app:layout_constraintTop_toTopOf="@id/tvLat" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        layout="@layout/content_loading"
        android:id="@+id/content_loading"
        android:visibility="gone"/>
    <include
        layout="@layout/no_data_layout"
        android:id="@+id/layoutNoData"
        android:visibility="gone"/>

    <include
        android:visibility="gone"
        android:id="@+id/layoutNoInternet"
        layout="@layout/layout_no_internet_connection"/>
</androidx.constraintlayout.widget.ConstraintLayout>