<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <View
            android:id="@+id/divider25"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider60"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.60"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSrNo"
            style="@style/plus_jakarta_display_regular_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="1"
            android:layout_marginVertical="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/divider25"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            style="@style/plus_jakarta_display_regular_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@string/date"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="@id/tvSrNo"
            app:layout_constraintEnd_toEndOf="@id/divider60"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/divider25"
            app:layout_constraintTop_toTopOf="@id/tvSrNo" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHolidayName"
            style="@style/plus_jakarta_display_regular_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/holiday_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/divider60"
            app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/alto"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvHolidayName"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>