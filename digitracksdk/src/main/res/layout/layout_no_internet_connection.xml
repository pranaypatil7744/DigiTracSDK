<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_no_internet_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_no_internet_connection" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_no_internet_connection"
        style="@style/plus_jakarta_display_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_internet_connection"
        android:textColor="@color/no_internet_connection"
        android:textSize="@dimen/size18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_no_internet_connection" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_description"
        style="@style/plus_jakarta_display_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen10"
        android:gravity="center"
        android:text="@string/make_sure_wi_fi_or_mobile_data_is_nturned_on_then_try_again"
        android:textColor="@color/no_internet_connection_color"
        android:textSize="@dimen/size14"
        app:layout_constraintTop_toBottomOf="@+id/label_no_internet_connection" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTryAgain"
        style="@style/MaterialLightButtonBaseStyle"
        android:layout_width="@dimen/dimen120"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen30"
        android:text="@string/try_again"
        android:textAllCaps="false"
        android:textSize="@dimen/size14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_description" />

</androidx.constraintlayout.widget.ConstraintLayout>