<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvVisit"
        style="@style/plus_jakarta_display_regular_small"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        tools:text="@string/check_in"
        android:textColor="@color/blue_ribbon"
        android:gravity="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvVisitTimeValue"
        style="@style/plus_jakarta_display_medium_small"
        android:layout_width="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="--:--"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvVisit"
        app:layout_constraintStart_toStartOf="@id/tvVisit"
        app:layout_constraintEnd_toEndOf="@id/tvVisit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>