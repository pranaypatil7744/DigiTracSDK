<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.digitracksdk.presentation.home.jobs_and_refer_fds.refer_a_friend.ReferAFriendActivity">

    <include
        layout="@layout/toolbar_main"
        android:id="@+id/toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/main_bg"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutCandidate"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:hint="@string/candidate_name"
                app:boxStrokeColor="@color/athens_gray"
                app:boxStrokeWidth="0.5dp"
                app:errorEnabled="true"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCandidate"
                    style="@style/plus_jakarta_display_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColor="@color/mine_shaft" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/plus_jakarta_display_medium_small"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:text="@string/gender"
                app:layout_constraintTop_toBottomOf="@id/layoutCandidate"/>

            <RadioGroup
                android:id="@+id/radioGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGender">

                <RadioButton
                    android:id="@+id/radioMale"
                    style="@style/plus_jakarta_display_medium_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:buttonTint="@color/blue_ribbon"
                    android:text="@string/male"/>
                <RadioButton
                    android:id="@+id/radioFemale"
                    style="@style/plus_jakarta_display_medium_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:buttonTint="@color/blue_ribbon"
                    android:text="@string/female"/>

            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutSkill"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:hint="@string/skill"
                app:boxStrokeColor="@color/athens_gray"
                app:boxStrokeWidth="0.5dp"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/radioGender">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/etSkill"
                    style="@style/plus_jakarta_display_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="@string/select"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColor="@color/mine_shaft" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutCandidateLocation"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:hint="@string/candidate_location"
                app:boxStrokeColor="@color/athens_gray"
                app:boxStrokeWidth="0.5dp"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/layoutSkill">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/etCandidateLocation"
                    style="@style/plus_jakarta_display_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:maxLines="4"
                    android:gravity="start"
                    android:textColor="@color/mine_shaft" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutCandidatePhone"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:hint="@string/candidate_phone"
                app:boxStrokeColor="@color/athens_gray"
                app:boxStrokeWidth="0.5dp"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/layoutCandidateLocation">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCandidatePhone"
                    style="@style/plus_jakarta_display_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:padding="15dp"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/mine_shaft" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutCandidateEmail"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:hint="@string/candidate_email"
                app:boxStrokeColor="@color/athens_gray"
                app:boxStrokeWidth="0.5dp"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/layoutCandidatePhone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCandidateEmail"
                    style="@style/plus_jakarta_display_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColor="@color/mine_shaft" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutBranchName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:hint="@string/branch_name"
                app:boxStrokeColor="@color/athens_gray"
                app:boxStrokeWidth="0.5dp"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/layoutCandidateEmail">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/etBranchName"
                    style="@style/plus_jakarta_display_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="@string/select"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColor="@color/mine_shaft" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutAadharCard"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:hint="@string/aadhaar_card_number"
                app:boxStrokeColor="@color/athens_gray"
                app:boxStrokeWidth="0.5dp"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/layoutBranchName">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAadharCard"
                    style="@style/plus_jakarta_display_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="12"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColor="@color/mine_shaft" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                style="@style/MaterialButtonBaseStyle"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:layout_margin="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutAadharCard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <include
        layout="@layout/content_loading"
        android:id="@+id/content_loading"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>