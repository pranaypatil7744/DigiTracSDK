<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_sheet">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvYourVisit"
        style="@style/plus_jakarta_display_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/your_visits"
        android:textColor="@color/mine_shaft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btnClose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_icon"
        app:tint="@color/silver_chalice" />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layoutHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_marginHorizontal="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvYourVisit">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCurrentMonthYear"
                style="@style/plus_jakarta_display_regular_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:textColor="@color/blue_ribbon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="June 2021" />

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/alto"
                app:layout_constraintTop_toTopOf="@id/tvInTime"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tvInTimeValue"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="12dp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvInTime"
                style="@style/plus_jakarta_display_regular_small"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/check_in"
                android:textColor="@color/jungle_green"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvCurrentMonthYear"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/divider"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvInTimeValue"
                style="@style/plus_jakarta_display_medium_small"
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:text="--:--"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvInTime"
                app:layout_constraintStart_toStartOf="@id/tvInTime"
                app:layout_constraintEnd_toEndOf="@id/tvInTime"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOutTime"
                style="@style/plus_jakarta_display_regular_small"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/check_out"
                android:gravity="center"
                android:textColor="@color/rejected_color"
                app:layout_constraintTop_toBottomOf="@id/tvCurrentMonthYear"
                app:layout_constraintStart_toEndOf="@id/divider"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOutTimeValue"
                style="@style/plus_jakarta_display_medium_small"
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:text="--:--"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvOutTime"
                app:layout_constraintStart_toStartOf="@id/tvOutTime"
                app:layout_constraintEnd_toEndOf="@id/tvOutTime"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/dividerHorizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/alto"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvOutTimeValue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerVisits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                tools:listitem="@layout/log_visit_item"
                app:layout_constraintTop_toBottomOf="@id/dividerHorizontal"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutHistory" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/blue_ribbon"
        android:src="@drawable/ic_add"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />

    <include
        android:id="@+id/content_loading"
        layout="@layout/content_loading"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>