<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:id="@+id/divider20"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/divider45"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/divider70"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/layoutDay"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/bg_text_round_corner"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintEnd_toStartOf="@id/divider20"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            style="@style/plus_jakarta_display_medium_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_ribbon"
            tools:text="28" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDay"
            style="@style/plus_jakarta_display_medium_xx_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_ribbon"
            android:textAllCaps="true"
            tools:text="Mon"
            />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCheckInTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/plus_jakarta_display_regular_small"
        android:drawableStart="@drawable/ic_time_sheet_check_in"
        android:drawablePadding="3dp"
        app:layout_constraintTop_toTopOf="@id/layoutDay"
        app:layout_constraintBottom_toBottomOf="@id/layoutDay"
        app:layout_constraintStart_toEndOf="@id/divider20"
        app:layout_constraintEnd_toStartOf="@id/divider45"
        android:layout_marginVertical="5dp"
        tools:text="10:00"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCheckOutTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/plus_jakarta_display_regular_small"
        android:drawableStart="@drawable/ic_time_sheet_check_out"
        android:drawablePadding="3dp"
        app:layout_constraintTop_toTopOf="@id/layoutDay"
        app:layout_constraintBottom_toBottomOf="@id/layoutDay"
        app:layout_constraintStart_toEndOf="@id/divider45"
        app:layout_constraintEnd_toStartOf="@id/divider70"
        android:layout_marginVertical="5dp"
        tools:text="10:00"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWorkingHrsTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/plus_jakarta_display_regular_small"
        android:drawableStart="@drawable/ic_hrs"
        android:drawablePadding="3dp"
        app:layout_constraintTop_toTopOf="@id/layoutDay"
        app:layout_constraintBottom_toBottomOf="@id/layoutDay"
        app:layout_constraintStart_toEndOf="@id/divider70"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="5dp"
        tools:text="10:00"/>

</androidx.constraintlayout.widget.ConstraintLayout>