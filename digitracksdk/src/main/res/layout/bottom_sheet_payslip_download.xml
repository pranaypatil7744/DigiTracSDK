<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_bottom_sheet">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPayslip"
        style="@style/plus_jakarta_display_light_large"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        tools:text="@string/payslips"
        android:textColor="@color/colorTextPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageMain"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/dimen50"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dimen10"
        android:layout_marginEnd="@dimen/dimen10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPayslip"
        app:srcCompat="@drawable/bg_job_text" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageIcon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="@+id/imageMain"
        app:layout_constraintStart_toStartOf="@id/imageMain"
        android:layout_marginTop="20dp"
        android:layout_marginStart="14dp"
        app:srcCompat="@drawable/ic_download_circle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPayslipMonthName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/plus_jakarta_display_regular_large"
        tools:text="February_Payslip.pdf"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginStart="@dimen/dimen20"
        app:layout_constraintStart_toEndOf="@+id/imageIcon"
        app:layout_constraintTop_toTopOf="@+id/imageMain" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="12/07/2021"
        android:layout_marginStart="@dimen/dimen20"
        android:layout_marginTop="@dimen/dimen2"
        app:layout_constraintTop_toBottomOf="@+id/tvPayslipMonthName"
        app:layout_constraintStart_toEndOf="@+id/imageIcon"
        />


</androidx.constraintlayout.widget.ConstraintLayout>