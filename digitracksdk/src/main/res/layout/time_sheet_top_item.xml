<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btnPrev"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/ic_prev"
        android:scaleType="centerInside"
        android:layout_marginStart="18dp"
        app:layout_constraintBottom_toBottomOf="@id/tvCurrentMonthYear"
        app:layout_constraintTop_toTopOf="@id/tvCurrentMonthYear"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btnNext"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/ic_next"
        android:scaleType="centerInside"
        android:layout_marginEnd="18dp"
        app:layout_constraintBottom_toBottomOf="@id/tvCurrentMonthYear"
        app:layout_constraintTop_toTopOf="@id/tvCurrentMonthYear"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCurrentMonthYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="June 2021"
        android:gravity="center"
        android:drawablePadding="10dp"
        style="@style/plus_jakarta_display_regular_small"
        android:drawableStart="@drawable/ic_calendar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/btnPrev"
        app:layout_constraintEnd_toStartOf="@id/btnNext"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary_15"
        android:paddingVertical="6dp"
        android:paddingHorizontal="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentMonthYear">
        <View
            android:id="@+id/divider20"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/divider45"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/divider70"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/plus_jakarta_display_regular_x_small"
            android:textColor="@color/blue_ribbon"
            android:textSize="10sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/divider20"
            android:layout_marginEnd="5dp"
            android:text="@string/date"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCheckIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/plus_jakarta_display_regular_x_small"
            android:textColor="@color/blue_ribbon"
            android:textSize="10sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/divider20"
            app:layout_constraintEnd_toStartOf="@id/divider45"
            android:layout_marginHorizontal="5dp"
            android:text="@string/check_in"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCheckOut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/plus_jakarta_display_regular_x_small"
            android:textColor="@color/blue_ribbon"
            android:textSize="10sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/divider45"
            app:layout_constraintEnd_toStartOf="@id/divider70"
            android:layout_marginHorizontal="5dp"
            android:text="@string/check_out"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWorkingHrs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            style="@style/plus_jakarta_display_regular_x_small"
            android:textColor="@color/blue_ribbon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/divider70"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/working_hr_s"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>