<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="15dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgProfile"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/circleImageView"
        app:srcCompat="@drawable/dummy_training_doc" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/plus_jakarta_display_medium_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/mine_shaft"
        app:layout_constraintEnd_toEndOf="@id/imgProfile"
        app:layout_constraintStart_toStartOf="@id/imgProfile"
        app:layout_constraintTop_toBottomOf="@id/imgProfile"
        tools:text="Illustrator" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubTitle"
        style="@style/plus_jakarta_display_regular_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="@id/imgProfile"
        app:layout_constraintStart_toStartOf="@id/imgProfile"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:text="Illustrator" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="24dp"
        android:background="@color/alto"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle" />

    <View
        android:id="@+id/divider50"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMinExp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/plus_jakarta_display_regular_xx_small"
        android:textColor="@color/silver_chalice"
        android:text="@string/min_experience"
        android:layout_marginTop="31dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divider50"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMinExpValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/plus_jakarta_display_medium"
        android:textColor="@color/mine_shaft"
        tools:text="3 Years"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvMinExp"
        app:layout_constraintStart_toStartOf="@id/tvMinExp"
        app:layout_constraintEnd_toEndOf="@id/tvMinExp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/plus_jakarta_display_regular_xx_small"
        android:textColor="@color/silver_chalice"
        android:text="@string/Location"
        app:textAllCaps="true"
        android:layout_marginHorizontal="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="@id/tvMinExp"
        app:layout_constraintStart_toEndOf="@id/divider50"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLocationValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/plus_jakarta_display_medium"
        android:textColor="@color/mine_shaft"
        tools:text="Mumbai"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvLocation"
        app:layout_constraintStart_toStartOf="@id/tvLocation"
        app:layout_constraintEnd_toEndOf="@id/tvLocation"/>

</androidx.constraintlayout.widget.ConstraintLayout>