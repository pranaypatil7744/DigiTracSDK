<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/plus_jakarta_display_regular_x_small"
        android:textColor="@color/dove_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ticket raised on : " />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/plus_jakarta_display_medium_x_small"
        tools:text="28 Jun"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintEnd_toStartOf="@id/tvIssueStatus"
        app:layout_constraintStart_toEndOf="@id/tvTitle"
        app:layout_constraintTop_toTopOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvIssueStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Open"
        android:visibility="gone"
        style="@style/plus_jakarta_display_light_x_small"
        android:background="@drawable/bg_status"
        android:backgroundTint="@color/alizarin_crimson_15"
        android:paddingHorizontal="12dp"
        android:paddingVertical="5dp"
        android:textColor="@color/tango"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"/>
</androidx.constraintlayout.widget.ConstraintLayout>