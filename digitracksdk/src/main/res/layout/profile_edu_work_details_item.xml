<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgIcon"
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/dummy_video_bg"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/roundCornerView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/plus_jakarta_display_medium_small"
        tools:text="Android Developer"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/imgIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgIcon"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleSub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="Computer Science 2011 -2013"
        style="@style/plus_jakarta_display_light_x_small"
        android:textColor="@color/dove_gray"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleSub2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="Computer Science 2011 -2013"
        style="@style/plus_jakarta_display_light_x_small"
        android:textColor="@color/dove_gray"
        app:layout_constraintTop_toBottomOf="@id/tvTitleSub"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleSub3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="Computer Science 2011 -2013"
        style="@style/plus_jakarta_display_light_x_small"
        android:textColor="@color/dove_gray"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvTitleSub2"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/alto"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleSub3"/>

</androidx.constraintlayout.widget.ConstraintLayout>