<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="18dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:paddingHorizontal="12dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvType"
            style="@style/plus_jakarta_display_regular_x_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            app:layout_constraintEnd_toStartOf="@+id/tvRequestStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Resignation Category :" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRequestStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/plus_jakarta_display_light_x_small"
            android:background="@drawable/bg_status"
            android:backgroundTint="@color/alizarin_crimson_15"
            android:paddingHorizontal="12dp"
            android:paddingVertical="5dp"
            android:textColor="@color/alizarin_crimson"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvType"
            tools:text="Rejected" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDateOfResignation"
            style="@style/plus_jakarta_display_medium_x_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/mine_shaft"
            app:layout_constraintEnd_toStartOf="@id/divider"
            app:layout_constraintStart_toStartOf="@id/tvType"
            app:layout_constraintTop_toBottomOf="@id/tvType"
            android:text="@string/date_of_resignation" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDateOfResignationValue"
            style="@style/plus_jakarta_display_regular_x_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/tundora"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvDateOfResignation"
            tools:text="25 Mar 2021" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPreferredLWD"
            style="@style/plus_jakarta_display_medium_x_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/mine_shaft"
            app:layout_constraintEnd_toStartOf="@id/divider"
            app:layout_constraintStart_toStartOf="@id/tvType"
            app:layout_constraintTop_toBottomOf="@id/tvDateOfResignationValue"
            android:text="@string/preferred_lwd" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPreferredLWDValue"
            style="@style/plus_jakarta_display_regular_x_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/tundora"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvPreferredLWD"
            tools:text="25 Mar 2021" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExpectedLastWrkDate"
            style="@style/plus_jakarta_display_medium_x_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/mine_shaft"
            app:layout_constraintEnd_toStartOf="@id/divider"
            app:layout_constraintStart_toStartOf="@id/tvType"
            app:layout_constraintTop_toBottomOf="@id/tvPreferredLWDValue"
            android:text="@string/expected_last_working_date" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExpectedLastWrkDateValue"
            style="@style/plus_jakarta_display_regular_x_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/tundora"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvExpectedLastWrkDate"
            tools:text="25 Mar 2021" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRMApprovedLwd"
            style="@style/plus_jakarta_display_medium_x_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/mine_shaft"
            app:layout_constraintEnd_toStartOf="@id/divider"
            app:layout_constraintStart_toStartOf="@id/tvType"
            app:layout_constraintTop_toBottomOf="@id/tvExpectedLastWrkDateValue"
            android:text="@string/rm_approved_lwd" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRMApprovedLwdValue"
            style="@style/plus_jakarta_display_regular_x_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/tundora"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvRMApprovedLwd"
            tools:text="25 Mar 2021" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvActionDate"
            style="@style/plus_jakarta_display_medium_x_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/mine_shaft"
            app:layout_constraintEnd_toStartOf="@id/divider"
            app:layout_constraintStart_toStartOf="@id/tvType"
            app:layout_constraintTop_toBottomOf="@id/tvRMApprovedLwdValue"
            android:text="@string/action_date" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvActionDateValue"
            style="@style/plus_jakarta_display_regular_x_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/tundora"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvActionDate"
            tools:text="25 Mar 2021" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvActionBy"
            style="@style/plus_jakarta_display_medium_x_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/mine_shaft"
            app:layout_constraintEnd_toStartOf="@id/divider"
            app:layout_constraintStart_toStartOf="@id/tvType"
            app:layout_constraintTop_toBottomOf="@id/tvActionDateValue"
            android:text="@string/action_by" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvActionByValue"
            style="@style/plus_jakarta_display_regular_x_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/tundora"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvActionBy"
            tools:text="25 Mar 2021" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRemark"
            style="@style/plus_jakarta_display_medium_x_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/mine_shaft"
            app:layout_constraintEnd_toStartOf="@id/divider"
            app:layout_constraintStart_toStartOf="@id/tvType"
            app:layout_constraintTop_toBottomOf="@id/tvActionByValue"
            android:text="@string/remark" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRemarkValue"
            style="@style/plus_jakarta_display_regular_x_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/tundora"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvRemark"
            tools:text="25 Mar 2021" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRevokeResignation"
            style="@style/MaterialButtonBaseStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/revoke_resignation"
            android:textAllCaps="false"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tvRemark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>