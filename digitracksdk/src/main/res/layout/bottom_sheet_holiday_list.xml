<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_sheet"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHolidayList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/plus_jakarta_display_regular"
        android:textColor="@color/mine_shaft"
        android:text="@string/view_holiday_list"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btnClose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/ic_close_icon"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        app:tint="@color/silver_chalice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="16dp"
        android:background="@color/blue_ribbon_29"
        app:layout_constraintTop_toBottomOf="@id/tvHolidayList">

        <View
            android:id="@+id/divider25"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider60"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.60"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSrNo"
            style="@style/plus_jakarta_display_regular_xx_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sr_no"
            android:textColor="@color/blue_ribbon"
            android:layout_marginVertical="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/divider25"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            style="@style/plus_jakarta_display_regular_xx_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textColor="@color/blue_ribbon"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="@id/tvSrNo"
            app:layout_constraintEnd_toEndOf="@id/divider60"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/divider25"
            app:layout_constraintTop_toTopOf="@id/tvSrNo" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHolidayName"
            style="@style/plus_jakarta_display_regular_xx_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/holiday_name"
            android:textColor="@color/blue_ribbon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/divider60"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHolidayList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:minHeight="400dp"
        app:layout_constraintTop_toBottomOf="@id/layoutTop" />

    <include layout="@layout/no_data_layout"
        android:id="@+id/layoutNoData"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/recyclerHolidayList"
        app:layout_constraintBottom_toBottomOf="@id/recyclerHolidayList" />

    <include
        layout="@layout/content_loading"
        android:id="@+id/content_loading"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>