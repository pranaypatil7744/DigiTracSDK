<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="10dp">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/plus_jakarta_display_regular_x_small"
        android:textColor="@color/silver_chalice"
        tools:text="Issue Category"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/plus_jakarta_display_regular"
        android:textColor="@color/mine_shaft"
        tools:text="I require offer letter"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgEdit"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgEdit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_edit"
        android:layout_marginEnd="20dp"
        app:tint="@color/blue_ribbon"
        app:layout_constraintEnd_toStartOf="@id/imgUpload"
        app:layout_constraintTop_toTopOf="@id/tvSubTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvSubTitle"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgUpload"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_upload"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@id/imgDownload"
        app:layout_constraintTop_toTopOf="@id/tvSubTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvSubTitle"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgDownload"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_bulk_download"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/tvSubTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvSubTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>