<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="18dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="6dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="15dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLeaveTitle"
        style="@style/plus_jakarta_display_regular_x_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/silver_chalice"
        app:layout_constraintEnd_toStartOf="@+id/tvRequestStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Business expense" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRequestStatus"
        style="@style/plus_jakarta_display_light_x_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:backgroundTint="@color/alizarin_crimson_15"
        android:paddingHorizontal="12dp"
        android:paddingVertical="5dp"
        android:textColor="@color/alizarin_crimson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvLeaveTitle"
        tools:text="Rejected" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLeaveMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Phone Bill"
        android:layout_marginTop="12dp"
        style="@style/plus_jakarta_display_regular"
        android:textColor="@color/mine_shaft"
        app:layout_constraintStart_toStartOf="@id/tvLeaveTitle"
        app:layout_constraintTop_toBottomOf="@id/tvLeaveTitle"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDate"
        style="@style/plus_jakarta_display_regular_x_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toStartOf="@+id/tvTotalDays"
        app:layout_constraintStart_toStartOf="@id/tvLeaveMsg"
        app:layout_constraintTop_toBottomOf="@id/tvLeaveMsg"
        tools:text="28 June 2021 - 30 June 2021" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTotalDays"
        style="@style/plus_jakarta_display_regular_x_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="@id/tvDate"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="3 Days Leave" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>