<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="18dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:paddingHorizontal="12dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvType"
            style="@style/plus_jakarta_display_regular_x_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            app:layout_constraintEnd_toStartOf="@+id/tvRequestStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="I forgot to check in time..." />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRequestStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/plus_jakarta_display_light_x_small"
            android:background="@drawable/bg_status"
            android:backgroundTint="@color/alizarin_crimson_15"
            android:paddingHorizontal="12dp"
            android:paddingVertical="5dp"
            android:textColor="@color/alizarin_crimson"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvType"
            tools:text="Rejected" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRequestTitle"
            style="@style/plus_jakarta_display_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/mine_shaft"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvType"
            app:layout_constraintTop_toBottomOf="@id/tvType"
            tools:text="Attendance Regularization" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvIssueDate"
            style="@style/plus_jakarta_display_regular_xx_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/gray"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@+id/tvResolvedDate"
            app:layout_constraintStart_toStartOf="@id/tvRequestTitle"
            app:layout_constraintTop_toBottomOf="@id/tvRequestTitle"
            tools:text="25 Mar 2021" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvResolvedDate"
            style="@style/plus_jakarta_display_regular_xx_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/silver_chalice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvIssueDate"
            app:layout_constraintBottom_toBottomOf="@id/tvIssueDate"
            tools:text="25 Mar 2021" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>